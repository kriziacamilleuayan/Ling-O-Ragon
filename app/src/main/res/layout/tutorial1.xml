<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="app.mobapp.android.pupkev.com.ling_o_ragon.TutorialOneActivity"
    android:clickable="true"
    android:id="@+id/tutorialone">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:id="@+id/lol"
        android:layout_gravity="left|bottom"
        android:src="@drawable/g1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good day! Since this is your first time to play Ling-O-Ragon, we&apos;re here to help you understand the mechanics of this game."
        android:id="@+id/wew"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="20dp"
        android:layout_marginTop="120dp"
        android:background="#7affffff" />


</FrameLayout>