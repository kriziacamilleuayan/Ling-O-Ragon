
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.mobapp.android.pupkev.com.ling_o_ragon.TwoThreeActivity"
    android:background="@drawable/bgred">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="@string/txtTranslate"
        android:textColor="#ffffff"
        android:typeface="normal"
        android:textStyle="italic"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:layout_gravity="center|left|top"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:text="Aga."
        android:textColor="#ffffff"
        android:typeface="normal"
        android:textSize="15sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="120dp" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:max="15"
        android:indeterminate="false"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:progressBackgroundTint="#000000" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/halababa"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton3"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/mayon" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton4"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/night" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton5"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/tulo" />


</FrameLayout>
