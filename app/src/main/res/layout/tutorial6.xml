<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/four"
    android:id="@+id/tutorialsix">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:id="@+id/lol"
        android:layout_gravity="center|bottom|right"
        android:src="@drawable/gg"
        android:layout_marginBottom="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is also a type of question which a picture or a set of pictures is given. Translate it to your understanding and input it to the whitespace below."
        android:id="@+id/wew"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="20dp"
        android:background="#7affffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Exit Tutorial"
        android:id="@+id/exit"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#000000"
        android:textColor="#ffffff" />

</FrameLayout>