<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/one"
    android:id="@+id/tutorialtwo"
    tools:context="app.mobapp.android.pupkev.com.ling_o_ragon.TutorialTwoActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:id="@+id/lol"
        android:layout_gravity="center|bottom|right"
        android:src="@drawable/b1"
        android:layout_marginBottom="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First, we have 3 sets of questions which vary from different uses."
        android:id="@+id/wew"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="20dp"
        android:background="#7affffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Exit Tutorial"
        android:id="@+id/exit"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#000000"
        android:textColor="#ffffff" />

</FrameLayout>