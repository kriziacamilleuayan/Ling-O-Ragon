
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="app.mobapp.android.pupkev.com.ling_o_ragon.TriviasActivity">


    <TextView
        android:text="@string/btnTrivias"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:textColor="#ffffff"
        android:id="@+id/txtTrivias"
        android:clickable="false"
        android:layout_marginTop="60dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center|top" />



    <Button
        android:layout_width="275sp"
        android:layout_height="55sp"
        android:text="Trivia 1          50 stars"
        android:id="@+id/btnTrivia1"
        android:background="@drawable/paperbtn"
        android:textColor="#000000"
        android:layout_below="@+id/txtOragonKaBa"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp" />

    <Button
        android:layout_width="275sp"
        android:layout_height="55sp"
        android:text="Trivia 2          100 stars"
        android:id="@+id/btnTrivia2"
        android:background="@drawable/paperbtn"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/btnTrivia1"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="275sp"
        android:layout_height="55sp"
        android:text="Trivia 3          150 stars"
        android:id="@+id/btnTrivia3"
        android:background="@drawable/paperbtn"
        android:textColor="#000000"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:layout_below="@+id/btnTrivia2"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="275sp"
        android:layout_height="55sp"
        android:text="Trivia 4          200 stars"
        android:id="@+id/btnTrivia4"
        android:background="@drawable/paperbtn"
        android:textColor="#000000"
        android:layout_marginTop="140dp"
        android:textSize="20sp"
        android:layout_below="@+id/btnTrivia2"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:layout_gravity="right|top"
        android:src="@drawable/simplestar"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:padding="5dp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/txtStars"
        android:layout_gravity="right|top"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textAlignment="viewEnd"
        android:paddingEnd="5dp" />


</FrameLayout>
